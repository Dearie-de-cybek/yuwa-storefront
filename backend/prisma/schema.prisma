generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. USER
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())

  orders    Order[]
  addresses Address[]
}

// 2. PRODUCT (The Parent Item)
model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Decimal  @db.Decimal(10, 2)
  category    String   // "Luxury Bubu", "Ready-to-Wear"
  images      String[] // ["url1", "url2"]
  
  variants    Variant[] // Links to specific sizes/colors
  createdAt   DateTime  @default(now())
}

// 3. VARIANT (The Specific SKU: "Green - Medium")
model Variant {
  id        String  @id @default(uuid())
  sku       String? 
  color     String  // "Emerald"
  size      String  // "M"
  stock     Int     @default(10)
  
  product   Product @relation(fields: [productId], references: [id])
  productId String
  
  orderItems OrderItem[]
}

// 4. ORDER
model Order {
  id            String      @id @default(uuid())
  totalAmount   Decimal     @db.Decimal(10, 2)
  status        OrderStatus @default(PENDING)
  paymentStatus String      @default("UNPAID") // "PAID", "FAILED"
  
  // Link to User (Optional for Guest Checkout)
  user          User?       @relation(fields: [userId], references: [id])
  userId        String?
  
  // Snapshot of shipping info
  shippingAddress Json 
  customerEmail   String

  items         OrderItem[]
  createdAt     DateTime    @default(now())
}

// 5. ORDER ITEMS (Snapshot of what was bought)
model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Price at time of purchase
  
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  
  variant   Variant @relation(fields: [variantId], references: [id])
  variantId String
}

// 6. ADDRESS BOOK
model Address {
  id      String @id @default(uuid())
  street  String
  city    String
  state   String
  zip     String
  country String
  
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}

model Promotion {
  id          String   @id @default(uuid())
  title       String   // e.g., "Independence Day Sale"
  code        String   @unique // e.g., "NAIJA50"
  discount    Float    // e.g., 20.0 (percentage)
  active      Boolean  @default(true)
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime @default(now())
}

enum Role {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}